{
    "app-id": "org.kde.kid3",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kid3",
    "rename-icon": "kid3",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-download",
        "--filesystem=xdg-music",
        "--env=TMPDIR=/var/tmp",
        "--own-name=org.mpris.MediaPlayer2.kid3"
    ],
    "cleanup": [
        "/man",
        "/share/man",
        "/include",
        "/lib/*.a",
        "/lib/*.la",
        "/share/**/*-qt.*",
        "/share/icons/**/**/**/*-qt.*"
    ],
    "modules": [
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/acoustid/chromaprint/archive/v1.5.1.tar.gz",
                    "sha256": "a1aad8fa3b8b18b78d3755b3767faff9abb67242e01b478ec9a64e190f335e1c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 286,
                        "stable-only": true,
                        "url-template": "https://github.com/acoustid/chromaprint/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-1.12.tar.gz",
                    "sha256": "7fccd07669a523b07a15bd24c8da1bbb92206cb19e9366c3692af3d79253b703",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1982,
                        "stable-only": true,
                        "url-template": "https://taglib.github.io/releases/taglib-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kid3",
            "buildsystem": "cmake-ninja",
            "make-install-args": [
                "check"
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DWITH_APPS=KDE;Qt;CLI",
                "-DWITH_ID3LIB=OFF",
                "-DDOCBOOK_XSL_DIR=/usr/share/xml/docbook/xml/xsl-stylesheets"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kid3/3.9.2/kid3-3.9.2.tar.xz",
                    "sha256": "4785eff8f9b3299405d6d16d4904c58da8ac1ae83610a33a98f5681aeb4d9e89",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1509,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kid3/$version/kid3-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
