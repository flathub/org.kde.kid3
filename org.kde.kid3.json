{
    "app-id": "org.kde.kid3",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kid3",
    "rename-icon": "kid3",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-download",
        "--filesystem=xdg-music",
        "--env=TMPDIR=/var/tmp",
        "--own-name=org.mpris.MediaPlayer2.kid3"
    ],
    "cleanup": [
        "/man",
        "/share/man",
        "/include",
        "/lib/*.a",
        "/lib/*.la",
        "/share/**/*-qt.*",
        "/share/icons/**/**/**/*-qt.*"
    ],
    "modules": [
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/acoustid/chromaprint/archive/v1.5.1.tar.gz",
                    "sha256": "a1aad8fa3b8b18b78d3755b3767faff9abb67242e01b478ec9a64e190f335e1c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 286,
                        "stable-only": true,
                        "url-template": "https://github.com/acoustid/chromaprint/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kid3",
            "buildsystem": "cmake-ninja",
            "make-install-args": [
                "check"
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DWITH_APPS=KDE;Qt;CLI",
                "-DWITH_ID3LIB=OFF",
                "-DDOCBOOK_XSL_DIR=/usr/share/xml/docbook/xml/xsl-stylesheets",
                "-DKDE_SKIP_TEST_SETTINGS=ON",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kid3/3.9.6/kid3-3.9.6.tar.xz",
                    "sha256": "cf27ffcc4369c9940da7bfc12fd10dfbda526b8187e5b62662abe8069fc26c27",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1509,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kid3/$version/kid3-$version.tar.xz"
                    }
                },
                {
                    "type": "file",
                    "url": "https://invent.kde.org/multimedia/kid3/-/commit/b3c65a8c1a3a4d6fe5655a5c2bf1c9e7eabb7ffb.patch",
                    "sha256": "d5502567094c6331b5192775e58920ce0d92235f9de3c72d3736af7abd082523"
                },
                {
                    "type": "shell",
                    "commands": [
                        "patch -p1 -i b3c65a8c1a3a4d6fe5655a5c2bf1c9e7eabb7ffb.patch"
                    ]
                }
            ]
        }
    ]
}
